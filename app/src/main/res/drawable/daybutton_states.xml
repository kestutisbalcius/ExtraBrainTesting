<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape>
            <corners android:radius="6px" />
            <gradient
                android:type="radial"
                android:gradientRadius="115"
                android:startColor="@color/ebGray"
                android:endColor="@color/standoutSelectedGray"
                android:centerX="0.35" android:centerY="0.3"/>
        </shape>
    </item>
    <item android:state_checked="false" >
        <shape><solid android:color="@color/ebGray" /></shape>
    </item>
</selector>